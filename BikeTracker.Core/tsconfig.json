{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [ "dom", "es5", "scripthost", "es2015.promise" ],
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outFile": "./wwwroot/js/site.js",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "compileOnSave": true,
  "include": [ "./Scripts/**/*" ]
}
