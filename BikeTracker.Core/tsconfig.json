{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "amd",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "suppressImplicitAnyIndexErrors": true,
    "outFile": "./wwwroot/js/site.js"
  },
  "compileOnSave": true,
  "include": [ "./Scripts/**/*" ]
}
