<div>
  <nav class="navbar navbar-default sub-navbar">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Manage IMEIs</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <form class="navbar-form navbar-left" role="search">
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-addon">
                <i class="glyphicon glyphicon-search"></i>
              </div>
              <input type="text" class="form-control" placeholder="Search" ng-model="imeiFilter" />
            </div>
          </div>
        </form>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="#">New IMEI</a>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container-fluid -->
  </nav>
  <table class="table table-responsive">
    <tr>
      <th>
        <a class="pointer" ng-click="updateSortBy('IMEI')">
          IMEI
          <i ng-if="sortBy != 'IMEI' || (sortBy == 'IMEI' && !sortReverse)" class="glyphicon glyphicon-sort-by-alphabet"></i>
          <i ng-if="sortBy == 'IMEI' && sortReverse" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
        </a>
      </th>
      <th>
        <a class="pointer" ng-click="updateSortBy('CallSign')">
          Call Sign
          <i ng-if="sortBy != 'CallSign' || (sortBy == 'CallSign' && !sortReverse)" class="glyphicon glyphicon-sort-by-alphabet"></i>
          <i ng-if="sortBy == 'CallSign' && sortReverse" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
        </a>
      </th>
      <th>
        <a class="pointer" ng-click="updateSortBy('Type')">
          Type
          <i ng-if="sortBy != 'Type' || (sortBy == 'Type' && !sortReverse)" class="glyphicon glyphicon-sort-by-alphabet"></i>
          <i ng-if="sortBy == 'Type' && sortReverse" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
        </a>

      </th>
      <th>
        <a ng-click="refresh()" role="button">
          Refresh <i class="glyphicon glyphicon-refresh"></i>
        </a>
      </th>
    </tr>

    <tr ng-repeat="imei in imeis | orderBy:sortBy:sortReverse | filter:imeiFilter">
      <td>
        {{imei.IMEI}}
      </td>
      <td>
        {{imei.CallSign}}
      </td>
      <td>
        {{imei.Type}}
      </td>
      <td>
        <a href="#/IMEIs/Edit/{{imei.Id}}">Edit</a> | <a href="#/IMEIs/Delete/{{imei.Id}}">Delete</a>
      </td>
    </tr>

  </table>
</div>
