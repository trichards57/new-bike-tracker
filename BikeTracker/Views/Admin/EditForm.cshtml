<div class="modal-header">
    <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Register New User</h4>
</div>
<div class="modal-body">
    <form role="form" name="editForm" novalidate>
        <div class="form-group">
            <label for="editEmail" class="control-label">Email:</label>
            <input id="editEmail" name="editEmail" type="email" class="form-control" required ng-model="vm.email" />
            <div ng-show="vm.editForm.$submitted || vm.editForm.editName.$dirty">
                <span class="text-danger" ng-show="vm.editForm.editEmail.$error.required">You need to give a valid email address.</span>
            </div>
        </div>
        <div class="form-group">
            <label for="editRole" class="control-label">Role:</label>
            <select id="editRole" class="form-control" ng-model="vm.role">
                @{
                    var dbContext = new BikeTracker.Models.Contexts.ApplicationDbContext();
                    foreach (var r in dbContext.Roles)
                    {
                        <option value="@r.Name">@r.DisplayName</option>
                    }
                }
            </select>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" ng-disabled="vm.editForm.$invalid" ng-click="vm.ok()">Save</button>
    <button type="button" class="btn btn-default" ng-click="vm.cancel()">Cancel</button>
</div>