<div>
    <nav class="navbar navbar-default sub-navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#/Admin">Manage Users</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="glyphicon glyphicon-search"></i>
                            </div>
                            <input type="text" class="form-control" placeholder="Search" ng-model="userFilter" />
                        </div>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a role="button" ng-click="showNewUser()">New User</a>
                    </li>
                    <li>
                        <a ng-click="refresh()" role="button">
                            Refresh <i class="glyphicon glyphicon-refresh"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <table class="table table-responsive">
        <tr>
            <th>
                <a class="pointer" ng-click="updateSortBy('UserName')">
                    User Name
                    <i ng-if="showAscending('UserName')" class="glyphicon glyphicon-sort-by-alphabet"></i>
                    <i ng-if="!showAscending('UserName')" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
                </a>
            </th>
            <th>
                <a class="pointer" ng-click="updateSortBy('EmailAddress')">
                    Email Address
                    <i ng-if="showAscending('EmailAddress')" class="glyphicon glyphicon-sort-by-alphabet"></i>
                    <i ng-if="!showAscending('EmailAddress')" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
                </a>
            </th>
            <th>
                <a class="pointer" ng-click="updateSortBy('RoleDisplayName')">
                    Role
                    <i ng-if="showAscending('RoleDisplayName')" class="glyphicon glyphicon-sort-by-alphabet"></i>
                    <i ng-if="!showAscending('RoleDisplayName')" class="glyphicon glyphicon-sort-by-alphabet-alt"></i>
                </a>
            </th>
            <th>
            </th>
        </tr>

        <tr ng-repeat="user in users | orderBy:sortBy:sortReverse | filter:userFilter">
            <td>
                {{user.UserName}}
            </td>
            <td>
                {{user.EmailAddress}}
            </td>
            <td>
                {{user.RoleDisplayName}}
            </td>
            <td>
                <a class="pointer" ng-click="showUpdateUser(user.Id)">Edit</a> | <a class="pointer" ng-click="showDeleteConfirm(user.Id)">Delete</a>
            </td>
        </tr>
        <tr ng-show="loading">
            <td colspan="4">
                <div class="progress progress-striped active">
                    <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        Loading Users
                    </div>
                </div>
            </td>
        </tr>
    </table>
</div>
