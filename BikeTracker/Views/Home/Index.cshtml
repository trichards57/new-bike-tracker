@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>SJA Tracker</h1>
    <p class="lead">Welcome to the St John Ambulance South West District tracker website.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <p><a href="@Url.Action("Index", "Map")" class="btn btn-primary btn-lg">Go to the map &raquo;</a></p>
    }
    else
    {
        <p><a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">Log in &raquo;</a></p>
    }
</div>

<div class="row">
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="col-md-4">
            <h2>New user?</h2>
            <p>
                If you have never used this site before, you will need to be issued with a username and password.
            </p>
            <p><a class="btn btn-default" href="@Url.Action("Contact", "Home")">Request a Username &raquo;</a></p>
        </div>
    }
    <div class="col-md-4">
        <h2>Get the trackers</h2>
        <p>There are a set of apps to enable your phone to be tracked from this website.</p>
        <p><a class="btn btn-default disabled">Coming soon</a></p>
    </div>
    <div class="col-md-4">
        <h2>Privacy policy</h2>
        <p>
            To get a better idea of how this website is used and how it can be made better, we collect some information
            about what you do with this site.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("Policies", "Home")">Find out more &raquo;</a></p>
    </div>
</div>