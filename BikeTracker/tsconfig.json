{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "outFile": "js/site.js"
  },
  "include": [
    "Scripts/ui/base/*.ts",
    "Scripts/ui/directives/*ts",
    "Scripts/ui/controllers/*ts",
    "Scripts/ui/app.ts"
  ],
  "exclude": [ "lib", "js" ],
  "compileOnSave": true
}